<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings"
    android:background="@color/mintCream">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/titleSettings"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/teal200"
            android:fontFamily="@font/amethysta"
            android:gravity="center|left"
            android:paddingLeft="30dp"
            android:text="@string/settings_fragment"
            android:textColor="@color/white"
            android:textSize="30sp" />
        <!--кликабельная вьюшка для списка локализаций-->
        <RelativeLayout
            android:layout_below="@+id/titleSettings"
            android:id="@+id/titleLanguages"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:clickable="true">
            <ImageView
                android:id="@+id/iconLanguages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/language_icon_light"/>

            <TextView
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/iconLanguages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:text="Languages"
                android:textSize="25sp"
                android:fontFamily="@font/amethysta"/>

        </RelativeLayout>
        <!--кликабельная вьюшка для окна помощи-->
        <RelativeLayout
            android:id="@+id/titleHelp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/titleLanguages"
            android:layout_marginTop="20dp"
            android:clickable="true">
            <ImageView
                android:id="@+id/iconHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/help_icon_light" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iconHelp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:text="Help"
                android:textSize="25sp"
                android:fontFamily="@font/amethysta"/>

        </RelativeLayout>


    </RelativeLayout>


</FrameLayout>